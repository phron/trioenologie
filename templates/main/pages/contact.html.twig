{% extends 'base.html.twig' %}
{% block title %}Contactez nous{% endblock %}
{% block body %}

    <div class="container col-lg-10 col-md-8 col-sm-6 mt-3"></div>

        <h1 class="text-center mt-2">Une question ? Contactez-nous :</h1>

    {{ form_start(form) }}        

        <div class="row justify-content-center text-center fst-italic">        
            <div class="col-4">{{ form_row(form.email) }}</div>
            <div class="col-4">{{ form_row(form.subject) }}</div>        
        </div>

        <br>

        <div class="row justify-content-center text-center fst-italic">
            <div class="col-4">{{ form_row(form.message) }}</div>        
        </div>

        <br>
    
        <div class="row justify-content-center">
            <button class="btn btn-submitForm col-3">{{ button_label|default('Envoyer') }}</button>   
        </div>
    
    {{ form_end(form) }}
{% endblock %}