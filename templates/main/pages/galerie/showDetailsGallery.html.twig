{% extends "base.html.twig" %}

{% block title %}Galerie photo{% endblock %}

{% block body %}

<div class="container">

    <section class="row justify-content-center">
            
        <div class="col lg-6 col-md-6 col-sm-4 shadow text-center">

            <h1 class="text-center">{{ gallery.imgTitle }}</h1>
            
            <p>{{ gallery.imgDesc }}</p>
