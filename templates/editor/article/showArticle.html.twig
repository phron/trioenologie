{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Intro</th>
                <td>{{ article.intro }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td>                
                {% if article.img %}
                        <img src="{{ asset("uploads/articles/" ~ article.img) }}" alt="" style="width:180px">
                {% else %}
                <span class="fst-italic">Pas d'image pour le moment</span>
                {% endif %}
                </td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ article.author }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('editor_article_index') }}">back to list</a>

    <a href="{{ path('editor_article_edit', {'id': article.id}) }}">edit</a>

    {{ include('editor/article/deleteArticle.html.twig') }}
{% endblock %}
