{% extends 'base.html.twig' %}

{% block title %}Modifier l'article{% endblock %}

{% block body %}
    <h1 class="text-center mt-3 rF">Modifier l'article n°{{article.id}} : {{article.title}}</h1>

    {{ include('editor/article/formArticle.html.twig', {'button_label': 'Mettre à jour'}) }}

    <br>

<form method="post" action="{{ path('editor_article_delete', {'id': article.id}) }}" onsubmit="return confirm('Êtes-vous sûr.e de vouloir supprimer cet article?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
    <div class="row justify-content-center mb-5">
        <button class="btn btn-delete mb-3 col-lg-1 col-md-1 col-sm-2 "><i class="bi bi-trash3-fill"></i></button>
    </div>
</form>


{% endblock %}
