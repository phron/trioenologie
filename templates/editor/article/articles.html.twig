{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Index des articles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Date de création</th>
                <th>Intro</th>
                <th>Contenu</th>
                <th>Image</th>
                <th>Auteur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.intro }}</td>
                <td>{{ article.content }}</td>
                <td>
                {% if article.img %}
                        <img src="{{ asset("uploads/articles/" ~ article.img) }}" alt="" style="width:200px">
                {% endif %}
                </td>
                <td>{{ article.author }}</td>
                <td>
                    <a href="{{ path('editor_article_show', {'id': article.id}) }}">Voir l'article</a>
                    <a href="{{ path('editor_article_edit', {'id': article.id}) }}">Modifier l'article</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun résultat.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('editor_article_new') }}">Ecrire un nouvel article</a>
{% endblock %}
