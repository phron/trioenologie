<section class="mt-3 text-center">
{{ form_start(form) }}

    {% if app.request.attributes.get('_route') == 'editor_carousel_edit' %}       
        <div class="container" id="illustrations">
            <h2 class="mb-3 rFb">Image actuelle</h2>
            <section class="row justify-content-center mb-4">
                {% for picture in carousel.pictures %}
                <div class="surroundPics my-1">
                    <div class="pics">
                        <img class="shadow-sm p-3 bg-body rounded" src="{{ asset('/uploads/pictures/'~ picture.pictureFile) }}" height="300px"> 
                        {# <a class="btn btn-outline-warning ms-2"  href="{{ path('editor_carousel_unlinkPicture', {carousel_id: carousel.id ,id: picture.id}) }}" >Enlever</a> #}
                    </div>
                </div>        
                {% endfor %}
            </section> 
        </div>
    {% endif %}

    <div class="row justify-content-center text-center rFb">
        <div class="col-6 mt-2">{{ form_row(form.pictures) }}</div>        
        <div class="col-6 mt-2">{{ form_row(form.savedPictures) }}</div>        
    </div>

    <br>

    <div class="row justify-content-center">
        <a href="{{ path('editor_carousel') }}" class="btn btn-return col-2 me-2">Retour</a>
        <button class="btn btn-submitForm col-2 ms-2">{{ button_label|default('Valider') }}</button>
    </div>

{{ form_end(form) }}
</section>