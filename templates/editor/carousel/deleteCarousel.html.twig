<form method="post" action="{{ path('editor_carousel_delete', {'id': carousel.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette image du carousel?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ carousel.id) }}">
    <div class="row justify-content-center mb-5">
        <button class="btn btn-delete col-lg-1 col-md-1 col-sm-2 mb-3">Supprimer l'image</button>
    </div>
</form>
