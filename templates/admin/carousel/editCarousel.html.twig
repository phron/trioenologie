{% extends 'base.html.twig' %}

{% block title %}Modifier l'image n°{{carousel.id}} du carousel{% endblock %}

{% block body %}

<div class="container">
    <h1 class="text-center mt-3 mb-4 rF">Modifier l'image n°{{carousel.id}} du carousel</h1>
    {{ include('admin/carousel/formCarousel.html.twig', {'button_label': 'Mettre à jour'}) }}
    <br>
    <form method="post" action="{{ path('admin_carousel_delete', {'id': carousel.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette image du carousel?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ carousel.id) }}">
        <div class="row justify-content-center mb-5">
            <button class="btn btn-delete col-lg-1 col-md-1 col-sm-2 mb-3"><i class="bi bi-trash3-fill"></i></button>
        </div>
    </form>
</div>

{% endblock %}
