    <a href="{{ path('admin_dashboard') }}">Retour au back-office</a>

    <a href="{{ path('admin_user_edit', {'id': user.id}) }}">Modifier l'utilisateur</a>

    {{ include('admin/user/deleteUser.html.twig') }}
{% endblock %}
