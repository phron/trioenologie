{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Rôle</th>                
                <th>Utilisateur</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Profil</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('admin_user_show', {'id': user.id}) }}">Voir</a>
                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}">Modifier</a>
                </td>

                {% for profile in profiles %}
                        
                        {% if profile.user.id == user.id %}
                        
                        <td>{{ profile.lastName }}</td>                       
                        <td>{{ profile.firstName }}</td>     
                        <td>
                            <a href="{{ path('admin_profile_show', {'id': profile.id}) }}">Voir</a>
                            <a href="{{ path('admin_profile_edit', {'id': profile.id}) }}">Modifier</a>
                        </td>      
                        {% endif %}

                    
                {% endfor %}
            </tr>

        {% else %}
            <tr>
                <td colspan="6">Aucun résultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_dashboard') }}" class="btn btn-primary">Retour au dashboard</a>

{% endblock %}
