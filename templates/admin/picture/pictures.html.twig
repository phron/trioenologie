{% extends 'base.html.twig' %}

{% block title %}Picture index{% endblock %}

{% block body %}
    <h1>Picture index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>AltText</th>
                <th>PictureFile</th>
                <th>Width</th>
                <th>Height</th>
                <th>Legend</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for picture in pictures %}
            <tr>
                <td>{{ picture.id }}</td>
                <td>{{ picture.title }}</td>
                <td>{{ picture.altText }}</td>
                <td>{{ picture.pictureFile }}</td>
                <td>{{ picture.width }}</td>
                <td>{{ picture.height }}</td>
                <td>{{ picture.legend }}</td>
                <td>
                    <a href="{{ path('admin_picture_show', {'id': picture.id}) }}">show</a>
                    <a href="{{ path('admin_picture_edit', {'id': picture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_picture_new') }}">Create new</a>
{% endblock %}
