{{ form_start(form) }}
    {{ form_widget(form) }}
    {# On vérifie si la route est 'edit' #}
    {% if app.request.attributes.get('_route') == 'app_article_edit' %}       
       
        <div class="container" id="illustrations">
            <h2 class="mb-3">Images</h2>
            <section class="row ">
                {% for picture in article.pictures %}
                <div class="surroundPics my-1">
                    <div class="pics">
                        <img class="shadow-sm p-3 mb-5 bg-body rounded" src="{{ asset('/uploads/pictures/'~ picture.pictureFile) }}" height="100px"> 
                        <a class="btn btn-outline-warning"  href="{{ path('admin_article_unlinkPicture', {article_id: article.id ,id: picture.id}) }}" >Détacher</a>
                    </div>
                </div>        
                {% endfor %}
            </section> 
        </div>
    {% endif %} 


    <button class="btn btn-success  my-1">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
