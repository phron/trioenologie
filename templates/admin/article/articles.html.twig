{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
<div class="container">
    <h1>Tous les articles</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Date de création</th>
                <th>Intro</th>
                <th>Contenu</th>
                <th>Images</th>
                <th>Auteur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.intro }}</td>
                <td>{{ article.content }}</td>
                <td>
            {% for picture in article.pictures %}
                <img class="shadow-sm p-3 mb-5 bg-body rounded" src="{{ asset('/uploads/pictures/'~ picture.pictureFile) }}" height="180px">     
            {% endfor %}
                </td>
                <td>{{ article.author }}</td>
                <td>
                    <a href="{{ path('admin_article_show', {'id': article.id}) }}">Voir l'article</a>
                    <a href="{{ path('admin_article_edit', {'id': article.id}) }}">Modifier l'article</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun résultat.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row justify-content-center">
        <a href="{{ path('admin_article_new') }}" class="btn btn-success col-3">Ecrire un nouvel article</a>
        <a href="{{ path('admin_article_index') }}" class="btn btn-success col-3">Retour à la liste des articles</a>
    </div>
</div>
{% endblock %}
