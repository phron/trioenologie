{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center rF">Tous les articles</h1>

    <a href="{{ path('admin_article_new') }}" class="btn btn-submitForm col-sm-2 mt-3">Ecrire un nouvel article</a>

    <table class="table tab">
        <thead class="tab">
            <tr class="tab">
                <th>ID</th>
                <th>Titre</th>
                <th>Crée le</th>
                <th>Intro</th>
                <th>Contenu</th>
                <th>Images</th>
                <th>Auteur</th>
                <th>Voir</th>
                <th>Modifier</th>
            </tr>
        </thead>
        <tbody class="tab">
        {% for article in articles %}
            <tr class="tab">
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.intro }}</td>
                <td>{{ article.content }}</td>
                <td>
            {% for picture in article.pictures %}
                <img class="shadow-sm p-3 bg-body rounded" src="{{ asset('/uploads/pictures/'~ picture.pictureFile) }}" height="180px">     
            {% endfor %}
                </td>
                {% if article.author %}
                    <td>{{ article.author }}</td>                    
                {% else %}
                    <td class="fst-italic">N.R</td>
                {% endif %}
                <td>
                    <a href="{{ path('admin_article_show', {'id': article.id}) }}"><i class="bi bi-eye-fill"></i></a>
                </td>
                <td>                
                    <a href="{{ path('admin_article_edit', {'id': article.id}) }}"><i class="bi bi-pencil-square"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun résultat.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row justify-content-center">
        <a href="{{ path('admin_occasion_new') }}" class="btn btn-return col-2 me-2 mt-3">Dashboard</a>
    </div>
</div>
{% endblock %}
