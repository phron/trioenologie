{% extends 'base.html.twig' %}

{% block title %}Toutes les catégories{% endblock %}

{% block body %}
<div class="container mt-4">

    <h1 class="text-center rF">Toutes les catégories</h1>

    <a href="{{ path('admin_category_new') }}" class="btn btn-submitForm col-sm-2 mt-3">Nouvelle catégorie</a>

    <table class="table tab">
        <thead class="tab">
            <tr class="tab">
                <th>ID</th>
                <th>Nom de la catégorie</th>
                <th>Détails</th>
                <th>Modifier</th>
            </tr>
        </thead>
        <tbody class="tab">
        {% for category in categories %}
            <tr class="tab">
                <td class="rFb">{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('admin_category_show', {'id': category.id}) }}"><i class="bi bi-eye-fill"></i></a>
                </td>
                <td>
                    <a href="{{ path('admin_category_edit', {'id': category.id}) }}"><i class="bi bi-pencil-square"></i></a>                
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun résultat trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row justify-content-center">
        <a href="{{ path('admin_dashboard') }}" class="btn btn-lg btn-return shadow col-lg-2 col-md-2 col-sm-3 me-2 mt-3 mb-5">Dashboard</a>
    </div>

</div>
{% endblock %}
