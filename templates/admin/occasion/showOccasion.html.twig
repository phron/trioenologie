{% extends 'base.html.twig' %}

{% block title %}Evènements{% endblock %}

{% block body %}
<div class="container">
    <h1>Evènement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ occasion.id }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>
                {% for picture in occasion.pictures %}
                    <img class="shadow-sm p-3 mb-5 bg-body rounded" src="{{ asset('/uploads/pictures/'~ picture.pictureFile) }}" height="200px">     
                {% endfor %} 
                </td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ occasion.category.name }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ occasion.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ occasion.description }}</td>
            </tr>
            <tr>
            <th>Nb de participants minimum</th>
                <td>{{ occasion.minParts }}</td>
            </tr>
            <tr>
            <th>Nb de participants max</th>
                <td>{{ occasion.maxParts }}</td>
            </tr>
            <tr>
                <th>Date de début</th>
                <td>{{ occasion.startDate ? occasion.startDate|date('d-m-Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Date de fin</th>
                <td>{{ occasion.endDate ? occasion.endDate|date('d-m-Y H:i') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_occasion_index') }}" class="btn btn-return col-3">Retour à la liste</a>

    <a href="{{ path('admin_occasion_edit', {'id': occasion.id}) }}" class="btn btn-update col-3">Modifier l'évènement</a>

    {{ include('admin/occasion/deleteOccasion.html.twig') }}

</div>
{% endblock %}
