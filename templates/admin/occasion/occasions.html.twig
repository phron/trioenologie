{% extends 'base.html.twig' %}

{% block title %}Occasion index{% endblock %}

{% block body %}
<div class="container mx-auto mt-4">

    <h1 class="text-center rF">Tous les évènements</h1>

    <a href="{{ path('admin_occasion_new') }}" class="btn btn-submitForm col-sm-2 mt-3">Nouvel évènement</a>

    <table class="table tab">
        <thead class="tab">
            <tr class="tab">
                <th>ID</th>
                <th>Photo</th>
                <th>Catégorie</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Début</th>
                <th>Fin</th>
                <th>Max parts</th>
                <th>Min parts</th>
                <th>Détails</th>
                <th>Modifier</th>
            </tr>
        </thead>
        <tbody class="tab">
        {% for occasion in occasions %}
            <tr class="tab">
                <td>{{ occasion.id }}</td>
                <td>                
                {% for picture in occasion.pictures %}
                    <img class="shadow-sm p-3 bg-body rounded" src="{{ asset('/uploads/pictures/'~ picture.pictureFile) }}" height="200px">     
                {% endfor %}       
                </td>
                <td>{{ occasion.category.name }}</td>
                <td>{{ occasion.title }}</td>
                <td>{{ occasion.description }}</td>
                <td>{{ occasion.startDate ? occasion.startDate|date('Y-m-d H:i') : '' }}</td>
                <td>{{ occasion.endDate ? occasion.endDate|date('Y-m-d H:i') : '' }}</td>
                <td>{{ occasion.minParts }}</td>
                <td>{{ occasion.maxParts }}</td>
                <td>
                    <a href="{{ path('admin_occasion_show', {'id': occasion.id}) }}"><i class="bi bi-eye-fill"></i></a>
                </td>
                <td>                
                    <a href="{{ path('admin_occasion_edit', {'id': occasion.id}) }}"><i class="bi bi-pencil-square"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun résultat.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row justify-content-center">
        <a href="{{ path('admin_occasion_new') }}" class="btn btn-return col-2 me-2 mt-3">Dashboard</a>
    </div>
    
</div>
{% endblock %}
